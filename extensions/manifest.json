{
  "manifest_version": 3,
  "version": "0.0.1",
  "name": "MetaPavo",
  "description": "MetaPavo links web3 information and functions into one box",
  "action": {
    "default_icon": "logo-128.png",
    "default_title": "MetaPavo, links web3 information and functions into one box"
  },
  "icons": {
    "128": "logo-128.png",
    "48": "logo-128.png"
  },
  "chrome_url_overrides": {
    "newtab": "dashboard/index.html"
  },
  "content_scripts": [
    {
      "matches": ["https://*/*"],
      "js": ["./dist/static/js/content.js"]
    },
    {
      "matches": ["https://opensea.io/*"],
      "js": ["./openseaoffer.js"]
    }
  ],
  "background": {
    "service_worker": "./dist/static/js/background.js"
  },
  "default_locale": "zh_CN",
  "options_page": "options.html",
  "permissions": ["storage", "alarms", "notifications", "tabs", "history"],
  "web_accessible_resources": [
    {
      "resources": [
        "images/*.jpg",
        "images/*.png",
        "images/svgs/*.svg",
        "logo-128.png",
        "data/labels.json"
      ],
      "matches": ["https://*/*"]
    }
  ]
}
