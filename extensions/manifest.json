{
  "manifest_version": 3,
  "version": "0.1.1",
  "name": "MetaPavo",
  "description": "MetaPavo links web3 information and functions into one box",
  "action": {
    "default_icon": "logo-128.png"
  },
  "icons": {
    "128": "logo-128.png",
    "48": "logo-128.png"
  },
  "content_scripts": [
    {
      "matches": ["https://*/*"],
      "js": ["./content/static/js/content.js"]
    },
    {
      "matches": ["https://twitter.com/*", "https://www.twitter.com/*"],
      "js": ["./content/static/js/twitter.js"],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "service_worker": "./content/static/js/background.js"
  },
  "permissions": ["storage"]
}
