{
  "manifest_version": 3,
  "version": "0.1",
  "name": "metapavo",
  "description": "Metapavo links web3 information into one box",
  "action": {
    "default_popup": "./dist/index.html"
  },
  "content_scripts": [
    {
      "matches": ["https://*/*"],
      "js": ["content.js"]
    },
    {
      "matches": ["https://twitter.com/*", "https://www.twitter.com/*"],
      "js": ["twitter.js"],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["tabs", "storage"]
}
